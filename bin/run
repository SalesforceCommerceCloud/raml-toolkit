require("@oclif/command")
  .run()
  .then(require("@oclif/command/flush"))
  .catch(e => {
    if (e.message.startsWith("command")) {
      require("../lib/commands/lint")
        .default.run()
        .catch(require("@oclif/errors/handle"));
    } else {
      throw e;
    }
  }).catch(require("@oclif/errors/handle"));